/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
    Mux (b=in, a=feedback, sel=load, out=dff-in);
    DFF (in=dff-in, out=feedback, out=out);
}
